@{
    ViewData["Title"] = "Authentication";
}
@model Handler.Models.Authentication.LogIn

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <div class="row">
        <form class="form-signin" ><!--asp-action="Check" asp-controller="Authentication" method="POST"-->
            <div class="form-group">
                <img class="mb-4" src="images/user.png" alt="" width="72" height="72">
            </div>
            <div class="form-group">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
            </div>
            <div class="form-group">
                <label for="inputLogin" class="sr-only">Login</label>
                <input asp-for="Login" type="text" maxlength="100" size="100" id="inputLogin" class="form-control" placeholder="Enter login" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="sr-only">Password</label>
                <input asp-for="Password" maxlength="100" size="100" type="password" id="inputPassword" class="form-control" placeholder="Password" required>
            </div>
                <button class="btn btn-lg btn-primary btn-block" id="Log" type="submit">Sign in</button>
        </form>
    </div>

</div>


<div class="modal" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Please wait</h5>
            </div>
            <div class="modal-body text-center">

                <div class="spinner-border" id="download" role="status">
                    <span class="sr-only">Загрузка...</span>
                </div>
                <div id="download2">
                    <p></p>    
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="~/js/LogIn.js" asp-append-version="true"></script>