@{
    ViewData["Title"] = "Authentication";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <div class="row">
        <form class="form-signin col-12">
            <div class="form-group">
                <img class="mb-4" src="images/user.png" alt="" width="72" height="72">
            </div>
            <div class="form-group">
                <h1 class="h3 mb-3 font-weight-normal">Будь-ласка введіть логін та пароль</h1>
            </div>
            <div class="form-group">
                <label for="inputLogin" class="sr-only">Login</label>
                <input type="text" maxlength="100" size="100" id="inputLogin" class="form-control" placeholder="Логін" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="sr-only">Password</label>
                <input maxlength="100" size="100" type="password" id="inputPassword" class="form-control" placeholder="Пароль" required>
            </div>
            <div class="btn btn-lg btn-primary btn-block" id="Log" type="submit">Увійти</div>
        </form>
    </div>

</div>


<div class="modal" id="myModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Зачекайте будь-ласка</h5>
            </div>
            <div class="modal-body text-center">
                <div class="spinner-border" id="download" role="status">
                    <span class="sr-only">Завантаження...</span>
                </div>
                <div class="alert alert-danger" id="e_alert" role="alert">
                    Відмова у доступі (Вікно закриється автоматично через 2 секунди)
                </div>

                <div class="alert alert-success" id="s_alert" role="alert">
                    Ласкаво просимо
                </div>
            </div>
        </div>
    </div>
</div>


