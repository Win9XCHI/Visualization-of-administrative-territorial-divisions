@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

        <table class="table">
            <tr>
                <th>Имя</th>
                <th>Логин</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PIB</td>
                    <td>
                        @item.Login
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Code">Изменить</a> |
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Code">Удалить</a>
                    </td>
                </tr>
            }
        </table>
    </div>
