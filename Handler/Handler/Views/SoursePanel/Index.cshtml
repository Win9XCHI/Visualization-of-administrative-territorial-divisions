@{
    ViewData["Title"] = "Search sources";
}
@model Handler.Models.SoursePanel.Sourse

    <div class="text-center">
        <div>
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="SoursePanel" asp-action="index">Знайти джерела</a>
                </li>
                <li class="nav-item User">
                    <a class="nav-link" asp-controller="SoursePanel" asp-action="AddSourse">Додати джерела</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link Admin" asp-controller="UserPanel" asp-action="SearchUsers">Знайти користувачів</a>
                </li>
            </ul>
        </div>

        <form asp-controller="SoursePanel" asp-action="ListSources" method="POST">
            <p class="text-center">Форма для пошуку</p>
            <div class="form-group mb-5 mx-auto text-center">
                <img class="mb-4" src="~/images/book.png" alt="" width="72" height="72">
            </div>
            <div class="form-group">
                <label for="InputName">Назва</label>
                <input asp-for="Name" type="text" class="form-control" id="InputName" aria-describedby="NameHelp">
            </div>
            <div class="form-group">
                <label for="InputAuthor">Автор</label>
                <input asp-for="Author" type="text" class="form-control" id="InputAuthor">
            </div>
            <div class="form-group">
                <label for="InputYear">Рік створення</label>
                <input asp-for="Year" type="text" maxlength="5" class="form-control" id="InputYear">
            </div>
            <div class="form-group">
                <label for="InputYearRelevance">Рік актуальності</label>
                <input asp-for="YearRelevance" type="text" maxlength="5" class="form-control" id="InputYearRelevance">
            </div>
            <div class="form-group mb-4">
                <label for="InputType">Тип</label>
                <input asp-for="Type" type="text" class="form-control" id="InputType">
            </div>
            <button type="submit" id="OutputSourse" class="btn btn-primary">Знайти</button>
        </form>

    </div>

    <div class="modal" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Зачекайте будь-ласка</h5>
                </div>
                <div class="modal-body text-center">
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Завантаження...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="~/js/ControlePanel.js" asp-append-version="true"></script>
